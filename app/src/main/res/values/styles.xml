<resources>

    <dimen name="navpic">40dp</dimen>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!--基础页面底部文字框样式-->
    <style name="basepage_footer" >
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:background">#50EED2EE</item>
        <item name="android:orientation">vertical</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">center_horizontal</item>
    </style>

    <!--活动用户页面按钮-->
    <style name="MyteamButtonStyle" >
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:textSize">15sp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:maxWidth">150dp</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@color/tv_tear</item>
        <item name="android:layout_marginLeft">2dp</item>
        <item name="android:layout_marginRight">2dp</item>
    </style>

    <!--底部文字框样式-->
    <style name="basepage_footer_tb">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#8a8a8a</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">15sp</item>
    </style>

    <!--顶部标题栏样式-->
    <style name="layout_bottom_menu">
        <item name="android:layout_width">match_parent</item>>
        <item name="android:layout_height">50dp</item>
        <item name="android:background">@color/yellow5</item>
        <item name="android:gravity">center</item>
    </style>

    <!--返回按钮样式-->
    <style name="btn_finish_ac">
        <item name="android:layout_width">25dp</item>>
        <item name="android:layout_height">25dp</item>
        <item name="android:background">@drawable/btn_return</item>
        <item name="android:padding">5dp</item>
    </style>

    <!--子页面顶部导航标题样式-->
    <style name="childpage_nav_title">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">25dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textSize">18sp</item>
        <item name="android:layout_marginRight">50dp</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="tab_text15sp">
        <item name="android:textSize">15sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="regist_et_boder">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:padding">5dp</item>
    </style>


    <style name="tv_acount_info_left">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="img_acount_info_right">
        <item name="android:layout_width">25dp</item>
        <item name="android:layout_height">25dp</item>
        <item name="android:src">@drawable/icon_go</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_margin">5dp</item>
    </style>

    <style name="tv_setup">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textSize">20sp</item>
        <item name="android:paddingLeft">20dp</item>
    </style>

    <style name="tv_rcm_time">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">12sp</item>
        <item name="android:layout_margin">5dp</item>
        <item name="android:textColor">@color/black5</item>
        <item name="android:text">2020/02/01</item>
    </style>

    <!--搜索框样式-->
    <style name="lyout_search">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_margin">5dp</item>
        <item name="android:padding">3dp</item>
        <item name="android:background">@drawable/et_boder</item>
    </style>

    <!--搜索框输入域样式-->
    <style name="et_search">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:hint">search...</item>
        <item name="android:padding">3dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">@drawable/et_null_boder</item>
    </style>

    <!--搜索框图标域样式-->
    <style name="icon_search">
        <item name="android:layout_width">20dp</item>
        <item name="android:layout_height">20dp</item>
        <item name="android:src">@drawable/icon_search</item>
        <item name="android:layout_margin">5dp</item>
    </style>

</resources>
