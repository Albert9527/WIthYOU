<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.VolunteerApplyActivity"
    android:orientation="vertical"
    android:background="#50C8F9F2">

    <LinearLayout
        style="@style/layout_bottom_menu">

        <Button
            style="@style/btn_finish_ac"
            android:layout_margin="10dp"
            />

        <TextView
            style="@style/childpage_nav_title"
            android:text="志愿者申请"
            android:textColor="#60101010"
            android:textSize="20sp"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical"
        android:padding="5dp"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center_vertical">
            <TextView
                android:layout_width="80dp"
                android:layout_height="40dp"
                android:text="职业"
                android:textSize="15sp"
                android:gravity="center_vertical"
                android:layout_marginLeft="20dp"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/et_boder"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="50dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center_vertical">
            <TextView
                android:layout_width="80dp"
                android:layout_height="40dp"
                android:text="任职单位"
                android:textSize="15sp"
                android:gravity="center_vertical"
                android:layout_marginLeft="20dp"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/et_boder"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="50dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center_vertical">
            <TextView
                android:layout_width="80dp"
                android:layout_height="40dp"
                android:text="现居地"
                android:textSize="15sp"
                android:gravity="center_vertical"
                android:layout_marginLeft="20dp"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/et_boder"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="50dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center_vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:text="是否有相关工作经验"
                android:textSize="15sp"
                android:gravity="center_vertical"
                android:layout_marginLeft="20dp"/>

            <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="50dp"
                android:orientation="horizontal">
                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:text="是"
                    android:textSize="15sp"
                    android:checked="true"/>
                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:text="否"
                    android:textSize="15sp"
                    android:checked="false"
                    android:layout_marginLeft="50dp"/>
            </RadioGroup>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center_vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:text="相关证明材料"
                android:textSize="15sp"
                android:gravity="center_vertical"
                android:layout_marginLeft="20dp"/>
            <Button
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="40dp"
                android:text="上传文件"
                android:textSize="15sp"
                android:background="#30F0C38B"/>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="#000000"
            android:layout_marginTop="3dp"
            android:layout_marginBottom="3dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical">
            <TextView
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:text="申请理由"
                android:textSize="15sp"
                android:paddingTop="10dp"
                android:layout_marginLeft="20dp"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/et_boder"
                android:layout_marginLeft="20dp"
                android:minLines="5"
                android:maxLines="10"
                android:layout_marginRight="10dp"
                android:textSize="15sp"
                android:lineSpacingExtra="5dp"
                android:layout_margin="5dp"/>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="#000000"
            android:layout_marginTop="3dp"
            android:layout_marginBottom="3dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical">
            <TextView
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:text="自我陈述"
                android:textSize="15sp"
                android:paddingTop="10dp"
                android:layout_marginLeft="20dp"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/et_boder"
                android:layout_marginLeft="20dp"
                android:minLines="5"
                android:maxLines="10"
                android:layout_marginRight="10dp"
                android:textSize="15sp"
                android:lineSpacingExtra="5dp"
                android:layout_margin="5dp"/>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="#000000"
            android:layout_marginTop="3dp"
            android:layout_marginBottom="3dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="《志愿者服务协议》"
                android:textSize="15sp"
                android:textColor="#6C9AEA"/>

        </LinearLayout>

        <Button
            android:layout_width="300dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:background="#50F0C38B"
            android:text="提交申请"
            />

    </LinearLayout>
</LinearLayout>