<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:orientation="vertical"
    android:layout_margin="3dp"
    android:paddingLeft="20dp"
    android:paddingRight="20dp">

    <TextView
        android:id="@+id/tv_answer_qscontent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:text="1、您是否经常感到情绪低落"
        android:textSize="20sp" />

    <RadioGroup
        android:id="@+id/rdgp_answer_item_option"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="30dp"
        android:orientation="vertical">

        <RadioButton
            android:id="@+id/radiobtn_answer_item_option1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:text="非常严重"
            android:textColor="@color/black"
            android:textSize="18sp" />

        <RadioButton
            android:id="@+id/radiobtn_answer_item_option2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:text="非常严重"
            android:textColor="@color/black"
            android:textSize="18sp" />

        <RadioButton
            android:id="@+id/radiobtn_answer_item_option3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:text="非常严重"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:visibility="gone"/>

        <RadioButton
            android:id="@+id/radiobtn_answer_item_option4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:text="非常严重"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:visibility="gone"/>
    </RadioGroup>

</LinearLayout>