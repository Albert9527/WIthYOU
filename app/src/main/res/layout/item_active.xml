<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_active_name"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:gravity="center"
        android:text="活动名称"
        android:textSize="20dp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/tv_active_firstpic"
        android:layout_width="match_parent"
        android:layout_height="260dp"
        android:background="@drawable/ly_boder"
        android:src="@drawable/cat"
        android:textSize="15sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp">

        <TextView
            android:id="@+id/tv_active_scale"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingLeft="20dp"
            android:text="规模" />

        <TextView
            android:id="@+id/tv_active_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="right"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:text="20220-04-10" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/black5" />

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/layout_active_btntag"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white5"
        android:orientation="vertical" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/ly_boder"
        android:gravity="center">

        <Button
            android:id="@+id/btn_active_apply_now"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:text="立即申请"
            android:background="@color/orange3"/>

        <Button
            android:id="@+id/btn_active_details"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:text="了解详情"
            android:background="@color/orange3"/>

    </LinearLayout>

</LinearLayout>