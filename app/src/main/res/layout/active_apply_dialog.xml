<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/yellow5"
        android:layout_marginBottom="50dp"
        android:orientation="horizontal"
        android:layout_gravity="center_vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="40dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="活  动  申  请"
            android:textSize="20sp" />

        <Button
            android:id="@+id/bt_active_apply_cancel"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:gravity="center"
            android:background="@drawable/icon_cancel" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_margin="5dp"
            android:hint="活动名称"
            android:textSize="20sp"/>

        <TextView
            android:id="@+id/tv_active_apply_name"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:paddingLeft="20dp"
            android:layout_marginRight="20dp"
            android:gravity="center_vertical"
            android:maxLines="2"
            android:background="@drawable/et_null_boder"
            android:hint="队伍名称" />
    </LinearLayout>


    <EditText
        android:id="@+id/et_active_apply_reason"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/et_boder"
        android:gravity="top"
        android:hint="申请理由..."
        android:maxLines="4"
        android:minLines="4"
        android:padding="5dp"
        android:layout_margin="10dp"
        android:textSize="15sp" />

    <Button
        android:id="@+id/btn_active_apply_submit"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:text="提交申请"
        android:background="@drawable/bg_compose_blue"/>
</LinearLayout>